<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="270">
    <item android:id="@android:id/background" >
        <shape
            android:innerRadiusRatio="2.5"
            android:shape="ring"
            android:useLevel="false"
            android:angle="0"
            android:type="sweep"
            android:thicknessRatio="50.0">
            <solid android:color="@color/colorBorder"/>
            <stroke android:color="@color/colorBorder" android:width="1dp" />

        </shape>
    </item>


    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            >
            <shape
                android:innerRadiusRatio="2.5"
                android:shape="ring"
                android:angle="0"
                android:type="sweep"
                android:thicknessRatio="50.0">
                <solid android:color="@color/greenColor" />
                <stroke android:color="@color/greenColor" android:width="1dp" />
            </shape>
        </rotate>
    </item>
</layer-list>