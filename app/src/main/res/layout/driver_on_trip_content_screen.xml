<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <in.delbird.delbirddriver.customview.CircularImageView
            android:id="@+id/user_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/pro_pic"
            app:border="true"
            app:border_color="@color/colorBorder"
            app:border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_pic"
            android:orientation="vertical">

            <in.delbird.delbirddriver.customview.GothamMediumTextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/buttonTextColor"
                android:textSize="16.67sp" />


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/parcel_state_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="96dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelled_package"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/redColor"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:text="canceled"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/delivered_package"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/greenColor"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:text="Delivered"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>